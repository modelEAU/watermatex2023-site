---
import { Image } from "@astrojs/image/components";
import Container from "@components/container.astro";
import Link from "@components/ui/link.astro";
import logo from "assets/logo-watermatex.png";
import Dropdown from "./dropdown.astro";
const menuitems = [
  {
    title: "The Conference",
    path: "/conference",
    children: [
      { title: "Themes", path: "/conference/themes" },
      { title: "Scientific Program", path: "/conference/scientific-program" },
      { title: "Social Program", path: "/conference/social-program" },
      { title: "Important Dates", path: "/conference/important-dates" },
      //{ title: "Workshops", path: "/conference/workshops" },
      //{ title: "Keynote", path: "/conference/keynote" },
    ],
  },
  {
    title: "About Us",
    path: "/about",
    children: [
      { title: "Scientific Committee", path: "/about/sci-committee" },
      { title: "Organisation Committee", path: "/about/org-committee" },
      { title: "Contact us", path: "/about/contact" },
    ],
  },
  {
    title: "Practical Info",
    path: "/info",
    children: [
      { title: "Venue", path: "/info/venue" },
      { title: "Accommodation", path: "/info/accommodation" },
      { title: "Visas", path: "/info/visas" },
      { title: "Templates", path: "/info/templates" },
    ],
  },
  {
    title: "Sponsors",
    path: "/sponsors",
    children: [
      { title: "Becoming a sponsor", path: "/sponsors/becoming-a-sponsor" },
      { title: "Our sponsors", path: "/sponsors/our-sponsors" },
    ],
  },
  {
    title: "News",
    path: "/news",
  },
  {
    title: "YWP",
    path: "/ywp",
  },
];
---

<Container>
  <header
    class="flex flex-col lg:flex-row justify-between items-center my-5"
    x-data="{ open: false }"
    x-init="$watch('open', value => console.log(value))">
    <div class="flex w-full lg:w-auto items-center justify-between">
      <Image
        class="mr-6"
        src={logo}
        alt="watermatex2023"
        loading="eager"
        format="webp"
        width={80}
        aspectRatio={1.92}
      />
      <a href="/" class="text-lg"
        ><span class="font-bold text-slate-800">Watermatex</span><span
          class="text-slate-500">2023</span
        >
      </a>
      <div class="block lg:hidden">
        <button type="button" @click="open = !open" class="text-gray-800">
          <svg
            fill="currentColor"
            class="w-4 h-4"
            viewBox="0 0 20 20"
            xmlns="http://www.w3.org/2000/svg">
            <title>Menu</title>
            <path
              x-cloak
              x-show="open"
              fill-rule="evenodd"
              clip-rule="evenodd"
              d="M18.278 16.864a1 1 0 01-1.414 1.414l-4.829-4.828-4.828 4.828a1 1 0 01-1.414-1.414l4.828-4.829-4.828-4.828a1 1 0 011.414-1.414l4.829 4.828 4.828-4.828a1 1 0 111.414 1.414l-4.828 4.829 4.828 4.828z"
            ></path>
            <path
              x-show="!open"
              fill-rule="evenodd"
              d="M4 5h16a1 1 0 010 2H4a1 1 0 110-2zm0 6h16a1 1 0 010 2H4a1 1 0 010-2zm0 6h16a1 1 0 010 2H4a1 1 0 010-2z"
            ></path>
          </svg>
        </button>
      </div>
    </div>
    <nav
      class="hidden w-full lg:w-auto mt-2 lg:flex lg:mt-0"
      :class="{ 'block': open, 'hidden': !open }"
      x-transition>
      <ul class="flex flex-col lg:flex-row lg:gap-3">
        {
          menuitems.map((item, index) => (
            <>
              {item.children && (
                <Dropdown
                  title={item.title}
                  children={item.children}
                  lastItem={index === menuitems.length - 1}
                />
              )}

              {!item.children && (
                <li>
                  <a
                    href={item.path}
                    class="flex lg:px-3 py-2 text-gray-600 hover:text-gray-900">
                    {item.title}
                  </a>
                </li>
              )}
            </>
          ))
        }
      </ul>
    </nav>
    <div>
      <div class="flex items-center gap-4">
        <Link href="/register/fees" size="md">Register</Link>
      </div>
    </div>
  </header>
</Container>

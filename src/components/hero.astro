---
import Link from "@components/ui/link.astro";

import NewsTicker from "./news-ticker.astro";
---

<main
  class="main grid lg:grid-cols-2 place-items-center mt-8 mb-8 rounded-md max-w-6xl mx-auto">
  <div class="bg-hero lg:min-h:500px order-1 py-6 mx-auto">
    <h1 class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight">
      Watermatex 2023
    </h1>
    <p class="text-lg mt-4 text-slate-800 max-w-xl">
      The 11th IWA Symposium on Modelling and Integrated Assessment.<br />Qu√©bec
      City, 24 - 27 September, 2023. <!--br /><div class="text-red-500">
        <strong
        >Note: Abstract submission deadline pushed to April 24, 2023!</strong
        >
      </div-->
    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <Link class="no-wrap" href="/register/fees" rel="noopener">Register</Link>
      <Link class="no-wrap" href="/program.pdf">Download the program</Link>
      <a
        style="background:#2dacee;color:#ffffff;padding:10px;border-radius:5px;font-size:16px;text-decoration:none"
        href="https://whova.com/portal/inper16_202309/?source=btn_link"
        target="_blank"
        rel="noreferrer"
        data-reactroot="">Get Whova Now</a
      >
    </div>
    <div class="mt-3 flex flex-col sm:flex-row gap-3"></div>
  </div>
  <div
    class="ticker-box my-6 order-2 mx-auto rounded drop-shadow-md border-slate-800 border-3 bg-gray-100 bg-opacity-60">
    <div class="relative">
      <NewsTicker />
    </div>
  </div>
  <!-- <Logos header="" logos={sponsors} /> -->
</main>
<style>
  .main {
    background-image: linear-gradient(
        to bottom,
        rgba(255, 255, 255, 0.75),
        rgba(255, 255, 255, 0.2)
      ),
      linear-gradient(
        to left,
        rgba(255, 255, 255, 0.75),
        rgba(255, 255, 255, 0.2)
      ),
      url("/qc-hero2.jpg");
    background-repeat: no-repeat;
    background-size: cover; /* Cover the entire width and height of the div */
    background-position: center; /* Center the image */
  }
  .bg-hero {
    padding: 2rem; /* Add some padding around your content for spacing */
  }
  .ticker-box {
    margin: 2rem;
    padding: 0.3rem;
  }
  .no-wrap {
    white-space: nowrap;
  }
</style>

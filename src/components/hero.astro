const sponsors = [
  {
    name: "dynamita",
    src: dynamita,
    width: 351,
    height: 84,
  },
];

---

<main
  class="grid place-items-center pt-16 pb-8 md:pt-8 z-0 mx-auto"
  style="grid-template-columns: 5fr 3fr;">

    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <Link href="/register/fees" rel="noopener">Registrations are now open!</Link>
      <Link
        size="lg"
        style="outline"
        rel="noopener"
        href="/info/visas"
        target="_blank">Get your visa</Link
      >
      <Link
        size="lg"
        style="outline"
        rel="noopener"
        href="/news"
        target="_blank">Announcements</Link
      >

---
export interface Props {
    dark?: boolean;
}
const {dark=false} = Astro.props as Props;
---

<div class={`card ${dark && 'dark'}`}>
    <slot />
</div>

<style>
    .card {
        background: #fff;
        padding: 12px;
        border-radius: 12px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        margin-bottom: 10px;
    }
    .dark {
        background: var(--color-primary);
        color: #fff;
    }

</style>
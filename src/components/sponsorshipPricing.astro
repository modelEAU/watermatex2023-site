---
import { Tick } from "@components/ui/icons";
import Link from "@components/ui/link.astro";

const { plan } = Astro.props;
const labels = new Map();
labels.set("nonIWA", "Non-IWA");
labels.set("IWA", "IWA Member");
labels.set("Student", "Student");
labels.set("accompanier", "Accompanying Person");
const contactLink = "mailto:info@watermatex2023.org?subject=Becoming%20a%20Sponsor"
---
<div>
  <div
    class="flex flex-col w-full order-first lg:order-none border-2 border-[#D8DEE9] border-opacity-50 py-5 px-6 rounded-md">
    <div class="text-center">
      <h4 class="text-lg font-medium text-gray-400">{plan.name}</h4>
      <!-- <p
        class="mt-3 text-4xl font-bold text-black md:text-4xl">
        {
          Object.entries(plan.price).map((item) => (
            <li class="flex items-start gap-3 text-gray-800 text-left">
              <Tick class="w-6 h-6" />
              <span>
                {labels.get(item[0])}: {item[1]}
              </span>
            </li>
          ))
        }
      </p> -->
      {
        plan.price && (
          <p class="mt-1 text-xl font-medium text-gray-600 md:text-2xl">
            {plan.price}
          </p>
        )
      }
    </div>
    <ul class="grid mt-8 text-left gap-y-4">
      {
        plan.features?.map((item) => (
          <li class="flex items-start gap-2 text-gray-800">
            <span class="flex-grow max-w-[calc(100%-1rem)]">{item}</span>
          </li>
        ))
      }
      <div class="flex justify-center min-w-max mt-4">
        <Link href={contactLink} style="primary"> Become a sponsor now </Link>
      </div>
    
  </div>
</div>

---
import { Image } from "@astrojs/image/components";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import Layout from "@layouts/Layout.astro";

const peter = "https://media.licdn.com/dms/image/C4D03AQFGSzFnygWZog/profile-displayphoto-shrink_800_800/0/1516787058933?e=1676505600&v=beta&t=rHhUsFkJtXQtUJGUDpNLJ0IBVWNturhUeKocX61ZTZU";
const elena = "https://media.licdn.com/dms/image/C5603AQEP-B3_ZG40Uw/profile-displayphoto-shrink_800_800/0/1516933568929?e=1676505600&v=beta&t=lZDXqWHohL8rRfhqVriKiP0FQnW4hDa9-Kw6C2700y4";
const jd = "https://media.licdn.com/dms/image/C5603AQGKoUU6Dr-qCg/profile-displayphoto-shrink_800_800/0/1616870061858?e=1676505600&v=beta&t=a5af8gNMDywfpTy0JWdqu9aECDiRleZOqdE1t9Ouyxc";
const saba = "https://media.licdn.com/dms/image/C5603AQEXrWOesvTXjQ/profile-displayphoto-shrink_800_800/0/1585305464115?e=1676505600&v=beta&t=m8yIDOP7rQpKLaTy_T7Jn2CXRVMibu-Q-eAztR89iFE";

const orgCommittee = [
  {
    name: "Peter Vanrolleghem",
    title: "",
    avatar: {
      src: peter,
      width: 800,
      height: 800,
    },
  },
  {
    name: "Elena Torfs",
    title: "",
    avatar: {
      src: elena,
      width: 800,
      height: 800,
    },
  },
  {
    name: "Jean-David Therrien",
    title: "",
    avatar: {
      src: jd,
      width: 800,
      height: 800,
    },
  },
  {
    name: "Saba Daneshgar",
    title: "",
    avatar: {
      src: saba,
      width: 800,
      height: 800,
    },
  },
];
const sciCommittee = [];
const ywpCommittee = [];

---

<Layout title="About us">
  <Container>
    <Sectionhead>
      <Fragment slot="title">About us</Fragment>
      <Fragment slot="desc">Our team is dedicated to building an incredible Watermatex.</Fragment>
    </Sectionhead>

    <div class="flex flex-col gap-3 mx-auto max-w-4xl mt-16">
      <h2 class="font-bold text-3xl text-gray-800">
        Organization committee
      </h2>
      <!--p class="text-lg leading-relaxed text-slate-500">
        Insert text here
      </p-->
    </div>
    <div class="grid md:grid-cols-3 gap-10 mx-auto max-w-4xl mt-12">
      {
        orgCommittee.map((item) => (
          <div class="group">
            <div class="w-full aspect-square">
              <Image
                {...item.avatar}
                format="avif"
                alt="Team"
                class="w-full h-full object-cover rounded transition  group-hover:-translate-y-1 group-hover:shadow-xl"
              />
            </div>

            <div class="mt-4 text-center">
              <h2 class="text-lg text-gray-800"> {item.name}</h2>
              <h3 class="text-sm text-slate-500"> {item.title}</h3>
            </div>
          </div>
        ))
      }
    </div>
    <div class="flex flex-col gap-3 mx-auto max-w-4xl mt-16">
      <h2 class="font-bold text-3xl text-gray-800">
        Scientific committee
      </h2>
      <p class="text-lg leading-relaxed text-slate-500">
        Coming soon...
      </p>
    </div>
    <div class="grid md:grid-cols-3 gap-10 mx-auto max-w-4xl mt-12">
      {
        sciCommittee.map((item) => (
          <div class="group">
            <div class="w-full aspect-square">
              <Image
                {...item.avatar}
                format="avif"
                alt="Team"
                class="w-full h-full object-cover rounded transition  group-hover:-translate-y-1 group-hover:shadow-xl"
              />
            </div>

            <div class="mt-4 text-center">
              <h2 class="text-lg text-gray-800"> {item.name}</h2>
              <h3 class="text-sm text-slate-500"> {item.title}</h3>
            </div>
          </div>
        ))
      }
    </div>
    <div class="flex flex-col gap-3 mx-auto max-w-4xl mt-16">
      <h2 class="font-bold text-3xl text-gray-800">
        Young Water Professionals committee
      </h2>
      <p class="text-lg leading-relaxed text-slate-500">
        Coming soon...
      </p>
    </div>
    <div class="grid md:grid-cols-3 gap-10 mx-auto max-w-4xl mt-12">
      {
        ywpCommittee.map((item) => (
          <div class="group">
            <div class="w-full aspect-square">
              <Image
                {...item.avatar}
                format="avif"
                alt="Team"
                class="w-full h-full object-cover rounded transition  group-hover:-translate-y-1 group-hover:shadow-xl"
              />
            </div>

            <div class="mt-4 text-center">
              <h2 class="text-lg text-gray-800"> {item.name}</h2>
              <h3 class="text-sm text-slate-500"> {item.title}</h3>
            </div>
          </div>
        ))
      }
    </div>
  </Container>
</Layout>
